<div class="container feed">
  <div>
    <h1 id="feed-title">News Feed</h1>
  </div>
      <% @posts.all.each do |post| %>
        <div class="card-product style=">
          <% if post.photo.attached? %>
              <%= cl_image_tag post.photo.key,class: "card-img-top"%>
          <% end %>
          <div class="card-product-info">
            <h5><%= post.user.name %> </h5>
            <p class="card-title"><%= post.title %></p>
            <p class="card-text"><%= post.text %></p>
            <p>Posted at: <%= post.created_at %></p>
          </div>
        </div>
      <% end %>
</div>

<button type="button" class="btn btn-secondary postbtn" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Post</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <%= render 'form', post: @post %>
      </div>
    </div>
  </div>
</div>
