<div class="container">
  <%= simple_form_for @event do |f| %>
    <%= f.input :name %>
    <%= f.input :cuisine %>
    <%= f.input :address, as: :text %>
    <%= f.input :price %>
    <%= f.input :event_time %>
    <%= f.input :capacity %>
    <%= f.input :category %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Back", myprofile_path, class: "btn btn-secondary" %>
  <% end %>
</div>
