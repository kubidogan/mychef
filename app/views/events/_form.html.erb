<div class="container">
  <div class="backbtn edit-user-button">
    <%= link_to myprofile_path do %>
      <i class="fas fa-times"></i>
    <% end %>
  </div>
  <div class="container-form">
    <%= simple_form_for @event do |f| %>
      <%= f.input :name %>
      <%= f.input :cuisine,
        as: :check_boxes,
        collection: ["Chinese", "Italian", "British", "Indian", "Vegan", "Japanese", "Austrian", "French", "Vegetarian"],
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %>
      <%= f.input :address, input_html: { data: { geocoder_target: "address" }, class: "d-none" }, wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
      <%= f.input :price %>
      <%= f.input :event_time, label: "Event Date", as: :string, required: false, input_html: {class: "datepicker", data: {controller: 'flatpickr'}, id: "event_date"} %>
      <%= f.input :capacity %>
      <%= f.input :category,
        as: :check_boxes,
        collection: ["Supper Club", "Dine-In", "Festival", "Picnic", "Private Hire", "Brunch"],
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %>
      <%= f.input :photo, as: :file %>
      <div class="event-buttons">
        <%= f.submit "Submit", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>


