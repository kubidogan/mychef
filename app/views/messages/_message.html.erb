<div class="<%= local_assigns[:css_class] %>" id="message-<%= message.id %>"data-sender-id="<%= message.user.id %>">
  <small>
    <%# <p id="message-name"><strong><%= message.user.name %>
    <div id="message-time">
      <i><%= message.created_at.strftime("%l:%M %p")%></i>
    </div>
  </small>
  <% if message.content.present? %>
    <div id="message-content">
      <p><%= message.content%></p>
    </div>
  <% end %>
  <% if message.photo.attached? %>
    <%= cl_image_tag message.photo.key, height: 150, width: 200, class:"message-img", style:"box-shadow: 3px 8px 13px grey;"%>
  <% end %>
</div>
